<core:FragmentDefinition xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:f="sap.ui.layout.form">

    <Dialog id="CashFlowDialog" core:require="{handler:'cashflowcontractinitial/ext/controller/CalCashFLow'}" title="Cash Flow Details" contentWidth="80%" contentHeight="50%" resizable="true">

        <content>
            <VBox renderType="Bare" class="dialogVBox">

                <!-- Form Section -->
                <f:SimpleForm editable="false" layout="ResponsiveGridLayout" class="fixedForm">
                    <f:content>
                        <Label text="Loan Number" design="Bold" />
                        <Text text="{loanNumber}" />

                        <Label text="Product Type" design="Bold" />
                        <Text text="{productType}" />

                        <Label text="Status" design="Bold" />
                        <Text text="{status}" />

                        <Label text="Disb.Status" design="Bold" />
                        <Text text="{disbursementStatus}" />

                        <Label text="Loan Partner" design="Bold" />
                        <Text text="{loanPartner}" />
                    </f:content>
                </f:SimpleForm>

                <!-- Table Section -->
                <ScrollContainer horizontal="true" vertical="true" height="100%" width="100%" class="tableScroll">
                    <Table headerText="Cash Flow" inset="false" growing="true" growingScrollToLoad="true" class="conditionTableCls">
                        <columns>
                            <Column>
                                <header>
                                    <Label text="Due Date" />
                                </header>
                            </Column>
                            <Column>
                                <header>
                                    <Label text="Pmnt Date" />
                                </header>
                            </Column>
                            <Column>
                                <header>
                                    <Label text="FTyp" />
                                </header>
                            </Column>
                            <Column>
                                <header>
                                    <Label text="Name" />
                                </header>
                            </Column>
                            <Column>
                                <header>
                                    <Label text="Settlement Amount" />
                                </header>
                            </Column>
                            <Column>
                                <header>
                                    <Label text="Settlement Currency" />
                                </header>
                            </Column>
                            <Column>
                                <header>
                                    <Label text="Calc. from" />
                                </header>
                            </Column>
                            <Column>
                                <header>
                                    <Label text="Percent" />
                                </header>
                            </Column>
                            <Column>
                                <header>
                                    <Label text="Base amnt" />
                                </header>
                            </Column>
                        </columns>

                        <items>
                            <ColumnListItem>
                                <cells>
                                    <Text text="04/09/2020" />
                                    <Text text="04/09/2020" />
                                    <Text text="A_Grant" />
                                    <Text text="Grant PI Refund/Offsetting Flow" />
                                    <Text text="390,628.72" />
                                    <Text text="USD" />
                                    <Text text="04/09/2020" />
                                    <Text text="1.00000000" />
                                    <Text text="390,628.72" />
                                </cells>
                            </ColumnListItem>

                            <ColumnListItem>
                                <cells>
                                    <Text text="05/01/2020" />
                                    <Text text="05/01/2020" />
                                    <Text text="A_Interest" />
                                    <Text text="Interest debt pos." />
                                    <Text text="488,191.19" />
                                    <Text text="USD" />
                                    <Text text="05/01/2020" />
                                    <Text text="1.00000000" />
                                    <Text text="488,191.19" />
                                </cells>
                            </ColumnListItem>
                        </items>
                    </Table>
                </ScrollContainer>
            </VBox>
        </content>

        <beginButton>
            <Button text="Close" press="handler.onClosePress" />
        </beginButton>
    </Dialog>
</core:FragmentDefinition>
